# Set some environment variables.
export EDITOR=nvim
export QT_QPA_PLATFORMTHEME=qt5ct

# On Fedora, the Nix-provided SSH doesn't work in Git.
export GIT_SSH=$(which ssh)

# Firefox can't handle this properly.
# export GTK_THEME=Plata-Noir

# This is for laptop. Use some magic logic stuff to make it laptop only.

# Make Firefox use Wayland
export MOZ_ENABLE_WAYLAND=1
# Fix the "Firefox is already running" bug when opening links from XWayland.
# https://mastransky.wordpress.com/2020/03/16/wayland-x11-how-to-run-firefox-in-mixed-environment/
export MOZ_DBUS_REMOTE=1

# Make supported applications scale 2.0
export GDK_DPI_SCALE=2
export QT_SCALE_FACTOR=2

export PATH="$PATH:/var/lib/flatpak/exports/bin"
export PATH="$HOME/.local/bin:$PATH"

# If running bash, include the .bashrc.
if [ -n "$BASH_VERSION" ]; then
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi

export XDG_DATA_DIRS="$HOME/.local/share:/usr/local/share:/usr/share:$XDG_DATA_DIRS"

# Nix
if [ -e "$HOME/.nix-profile/etc/profile.d/nix.sh" ]; then
    . "$HOME/.nix-profile/etc/profile.d/nix.sh";

    export XDG_DATA_DIRS="$HOME/.nix-profile/share:$XDG_DATA_DIRS"
fi

# Display
xrandr --output HDMI-0 --right-of DP-0

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init --path)"
